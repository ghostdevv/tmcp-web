{
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"types": ["@cloudflare/vitest-pool-workers"]
	},
	"include": ["src/**.ts", "src/**.js", "tests/**/*.ts", "worker-configuration.d.ts"],
	"exclude": ["node_modules/**"]
}
